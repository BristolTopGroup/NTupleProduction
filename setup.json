{
	"name": "NTupleProduction",
	"version": "CMSSW_8_0_14",
	"cmssw_version": "CMSSW_8_0_14",
	"scram_arch": "slc6_amd64_gcc530",
	"summary": "For the creation of n-tuples",
	"author": "Bristol Top Quark Group",
	"source": "https://github.com/BristolTopGroup/NTupleProduction.git",
	"destination": "BristolAnalysis/NTupleTools",
	"links": [ "BuildFile.xml",
		"data",
		"interface",
		"plugins",
		"python",
		"src",
		"test"
	],
	"project_page": "https://github.com/BristolTopGroup",
	"license": "Apache License, Version 2.0",
	"dependencies": [{
			"name": "TopSkimming",
			"source": "https://github.com/BristolTopGroup/TopSkimming.git",
			"destination": "TopQuarkAnalysis/TopSkimming",
			"provider": "git"
		},{
			"name": "PseudoTop",
			"source": "jhgoh:PseudoTop76",
			"destination": "",
			"provider": "git-cms-merge-topic"
		},{
			"name": "ganga",
			"source": "ganga",
			"destination": "",
			"provider": "pip"
		},
		{
			"name": "AnalysisSoftware",
			"source": "https://github.com/BristolTopGroup/AnalysisSoftware.git",
			"destination": "BristolAnalysis/Tools",
			"provider": "git",
			"setup-cmds": [
				"ln -s {CMSSW_SRC}/BristolAnalysis/Tools {CMSSW_SRC}/../../../DEV/AS",
				"echo \"AS is now available in DEV/AS (links to {CMSSW_SRC}/BristolAnalysis/Tools)\""
			]
		},
		{
			"name": "TopHitFit",
			"source": "https://github.com/BristolTopGroup/TopHitFit.git",
			"destination": "TopQuarkAnalysis/TopHitFit",
			"provider": "git"
		},{
			"name": "DailyPythonScripts",
			"source": "git+https://github.com/BristolTopGroup/DailyPythonScripts.git",
			"destination": "",
			"provider": "pip",
			"setup-cmds": [
				"cd ../../.. && ln -s ../external/miniconda/envs/ntp/lib/python2.7/site-packages/dps DEV/dps",
				"echo \"DPS is now availble in DEV/dps (links to external/miniconda/envs/ntp/lib/python2.7/site-packages/dps)\""
			]
		}
	]
}
